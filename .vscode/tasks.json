{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile Current Rust File",
            "type": "shell",
            "command": "rustc",
            "args": [
                "${file}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Run Current Rust File",
            "type": "shell",
            "command": "./${fileBasenameNoExtension}",
            "dependsOn": "Compile Current Rust File",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            }
        }
    ]
}